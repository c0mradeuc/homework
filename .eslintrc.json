{
    "env": {
        "browser": false,
        "commonjs": true,
        "es2021": true
    },
    "extends": "google",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "globals": {
        "console": true
    },
    "rules": {
        "require-jsdoc": 0,
        "valid-jsdoc": ["warn", { "requireParamType": false, "requireReturnType": false }],
        "indent": ["error", 2],
        "object-curly-spacing": 0,
        "no-undef": "error",
        "semi": ["warn", "never"],
        "new-cap": "off",
        "comma-dangle": "off",
        "max-len": ["warn", 150]
    }
}
